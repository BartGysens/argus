/**
 * Implements hook_node_info().
 */
function argus_feedbackgroepen_node_info() {
	$items = array (
			'feedbackgroep' => array (
					'name' => t ( 'Feedbackgroep' ),
					'base' => 'node_content',
					'description' => t ( 'De <em>feedbackgroep</em> heeft als doelstelling om op afroep reflexie te geven op allerlei vragen.' ),
					'has_title' => '1',
					'title_label' => t ( 'Naam' ),
					'help' => '' 
			) 
	);
	drupal_alter ( 'node_info', $items );
	return $items;
}

/**
 * Implement hook_form()
 */
function argus_feedbackgroepen_form($node, $form_state) {
	return node_content_form ( $node, $form_state );
}

/**
 * Implementation of hook_views_api().
 */
function argus_feedbackgroepen_views_api() {
	return array (
			'api' => 3.0,
			'path' => drupal_get_path ( 'module', 'argus_feedbackgroepen' ) 
	) // replace demo with your content type
;
}

