/**
 * Implements argus_gip_menu().
 */
function argus_gip_menu() {
	if (menu_load('menu-modules')){
		$menu = 'menu-modules';
	} else {
		$menu = 'navigation';
	}
	
	$items = array ();
	$items ['GIP'] = array (
			'title' => t ( 'GeÃ¯ntegreerde proef - GIP' ),
			'description' => 'Beheer je GeÃ¯ntegreerde proef via deze eenvoudige pagina.',
			'access arguments' => array (
					'access argus_gip content'
			),
			'type' => MENU_NORMAL_ITEM,
			'menu_name' => $menu
	);
	return $items;
}

/**
 * Implements hook_permission().
 */
function argus_gip_permission() {
	return array (
			'access argus_gip content' => array (
					'title' => t ( 'Mag de GIP-status bekijken' )
			)
	);
}