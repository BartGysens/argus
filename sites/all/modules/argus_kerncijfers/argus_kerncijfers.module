        'title' => t('Kerncijfers: details'),
        'page callback' => 'argus_kerncijfers_detail',
        'page arguments' => array(1,2),
        'access arguments' => array('access argus_kerncijfers content'),
        'type' => MENU_CALLBACK,
    );
    return $items;
}


