/* Drupal Hooks */

/**
 * Implements hook_ctools_plugin_api().
 */
function argus_organisaties_ctools_plugin_api($module = NULL, $api = NULL) {
	if ($module == "field_group" && $api == "field_group") {
		return array (
				"version" => "1" 
		);
	}
}

/**
 * Implements hook_node_info().
 */
function argus_organisaties_node_info() {
	$items = array (
			'organisatie' => array (
					'name' => t ( 'Organisatie' ),
					'base' => 'node_content',
					'description' => t ( 'Koppel bedrijven, organisaties, verenigingen aan je toepassingen met behulp van dit type. Enkele toepassingen: stagebedrijven, leveranciers, partners in projecten, ...' ),
					'has_title' => '1',
					'title_label' => t ( 'Naam' ),
					'help' => '' 
			) 
	);
	drupal_alter ( 'node_info', $items );
	return $items;
}

/**
 * Implement hook_form()
 */
function argus_organisaties_form($node, $form_state) {
	return node_content_form ( $node, $form_state );
}

/**
 * Implementation of hook_views_api().
 */
function argus_organisaties_views_api() {
	return array (
			'api' => 3.0,
			'path' => drupal_get_path ( 'module', 'argus_organisaties' ) 
	) // replace demo with your content type
;
}