/**
 * Implements hook_node_info()
 */
function demo_node_info() {
	// Replace demo with your content type definitions
	return array (
			'demo' => array (
					'name' => t ( 'Demo' ),
					'base' => 'node_content',
					'description' => t ( 'Beschrijving van je inhoudstype.' ),
					'has_title' => '1',
					'title_label' => t ( 'Demo - titel' ),
					'help' => ''
			) 
	);
}

/**
 * Implement hook_form()
 */
function demo_form($node, $form_state) {
	return node_content_form ( $node, $form_state );
}

/**
 * Implementation of hook_views_api().
 */
function demo_views_api() {
	return array (
			'api' => 3.0,
			'path' => drupal_get_path ( 'module', 'demo' ) // replace demo with your content type 
	);
}

