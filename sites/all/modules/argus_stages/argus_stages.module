/* Drupal Hooks */

/**
 * Implements hook_ctools_plugin_api().
 */
function argus_stages_ctools_plugin_api($module = NULL, $api = NULL) {
	if ($module == "field_group" && $api == "field_group") {
		return array (
				"version" => "1" 
		);
	}
}

