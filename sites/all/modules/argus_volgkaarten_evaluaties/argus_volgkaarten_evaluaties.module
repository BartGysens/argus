/* Drupal Hooks */

/**
 * Implements hook_ctools_plugin_api().
 */
function argus_volgkaarten_evaluaties_ctools_plugin_api($module = NULL, $api = NULL) {
	if ($module == "field_group" && $api == "field_group") {
		return array (
				"version" => "1" 
		);
	}
}

/**
 * Implements hook_node_info().
 */
function argus_volgkaarten_evaluaties_node_info() {
	$items = array (
			'msl_volgkaart_evaluatie' => array (
					'name' => t ( 'MSL - Volgkaart - Evaluatie' ),
					'base' => 'node_content',
					'description' => '',
					'has_title' => '1',
					'title_label' => t ( 'Titel' ),
					'help' => '' 
			) 
	);
	drupal_alter ( 'node_info', $items );
	return $items;
}

/**
 * Implement hook_form()
 */
function argus_volgkaarten_evaluaties_form($node, $form_state) {
	return node_content_form ( $node, $form_state );
}